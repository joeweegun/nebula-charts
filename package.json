{
  "name": "nebula-charts",
  "version": "0.2.6",
  "private": false,
  "author": "M_Joe",
  "description": "React charts library",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "keywords": [
    "echarts",
    "react",
    "charts",
    "react echarts"
  ],
  "homepage": "http://joe.pano.chat/",
  "repository": {
    "type": "git",
    "url": "https://github.com/joeweegun/nebula-charts"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/echarts": "^4.8.3",
    "@types/jest": "^24.0.0",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "axios": "^0.20.0",
    "cross-env": "^7.0.2",
    "echarts": "^4.9.0",
    "echarts-for-react": "^2.0.16",
    "echarts-liquidfill": "^2.0.6",
    "lint-staged": "^10.4.2",
    "prettier": "^2.1.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.3",
    "rimraf": "^3.0.2",
    "typescript": "~3.7.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "npm run clean && npm run build-ts && npm run build-css",
    "test": "react-scripts test",
    "test:nowatch": "cross-env CI=true react-scripts test",
    "eject": "react-scripts eject",
    "storybook": "start-storybook -p 6006 -s public",
    "build-storybook": "build-storybook -s public",
    "lint": "eslint --ext js,ts,tsx src --max-warnings 10",
    "clean": "rimraf ./dist",
    "build-ts": "tsc -p tsconfig.build.json",
    "build-css": "node-sass ./src/styles/index.scss ./dist/index.scss",
    "prepublishOnly": "npm run lint && npm run build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm test:nowatch && npm run lint"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@storybook/addon-actions": "^6.0.26",
    "@storybook/addon-essentials": "^6.0.26",
    "@storybook/addon-links": "^6.0.26",
    "@storybook/node-logger": "^6.0.26",
    "@storybook/preset-create-react-app": "^3.1.4",
    "@storybook/react": "^6.0.26",
    "babel-loader": "^8.1.0",
    "node-sass": "^4.14.1",
    "react-is": "^16.13.1"
  }
}
